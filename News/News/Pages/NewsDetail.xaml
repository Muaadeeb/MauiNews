<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="News.Pages.NewsDetail">

    <Grid RowDefinitions="Auto, Auto, Auto">
        <Image Grid.Row="0" x:Name="ImgNews" HeightRequest="300" Aspect="Fill"></Image>
        <Label Grid.Row="1" x:Name="Title" Margin="10" FontSize="Title" FontAttributes="Bold" TextDecorations="Underline"></Label>
        <Label Grid.Row="2" x:Name="Content" Margin="10" FontSize="Body"></Label>
    </Grid>

</ContentPage>